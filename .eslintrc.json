{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "redtn",
        "plugin:vue/base"
    ],
    "parser": "vue-eslint-parser",
    "plugins": [
    "vue"
    ],
    "settings": {
        "import/resolver": {
            "webpack": {
            "config": "build/webpack.base.conf.js"
            }
        }
    },
    "rules": {
        "max-len": ["error", { "code": 170 }],
        "import/extensions": ["error", "always", {
          "js": "never",
          "vue": "never"
        }],
        "import/no-extraneous-dependencies": ["error", {
          "optionalDependencies": ["test/unit/index.js"]
        }]
      }
}
